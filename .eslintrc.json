{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "import/prefer-default-export": "off",
        "indent": ["error", 4],
        "no-bitwise": ["error", {
            "int32Hint": true
        }],
        "no-console": "off"
    },
    "parser": "babel-eslint"
}